@using ApplicationCore.Entities
@model Company
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Company Details</h4>
    <hr />
    <div class="row">
        <div class="col-sm-2">
            <img height="120" width="120" class="rounded-circle" src="~/img/@Model.LogoImageName">
        </div>
        <div class="col-sm-9">
            <dl class="row">
                <dt class="col-sm-2">
                    Name:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    Title:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    MERSIS No:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdentificationNo)
                </dd>
                <dt class="col-sm-2">
                    Tax No:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TaxNo)
                </dd>
                <dt class="col-sm-2">
                    Tax Office:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TaxOffice)
                </dd>

                <dt class="col-sm-2">
                    Phone:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Phone)
                </dd>
                <dt class="col-sm-2">
                    Address:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Adress)
                </dd>
                <dt class="col-sm-2">
                   E-Mail:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    Employee Count:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EmployeeCount)
                </dd>
                <dt class="col-sm-2">
                    Found Year:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FoundYear)
                </dd>
                <dt class="col-sm-2">
                    Contract Start Date:
                </dt>
                <dd class="col-sm-10">
                    @Model.ContractStartDate.ToString("dd/MM/yyyy")
                </dd>
                <dt class="col-sm-2">
                    Contract End Date:
                </dt>
                <dd class="col-sm-10">
                    @Model.ContractEndDate.ToString("dd/MM/yyyy")
                </dd>
                <dt class="col-sm-2">
                    Status:
                </dt>
                <dd class="col-sm-10">
                    @(@Model.Status ? "Aktif" : "Aktif Değil")
                </dd>
            </dl>
        </div>
    </div>
   
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
