@using ApplicationCore.Entities
@using Project.Areas.admin.Models
@model CreateViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Company Create</h1>



    
        <form class="row" asp-controller="Company" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Image" class="control-label">Logo:</label>
                    <input type="file" asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Title" class="control-label">Title:</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="IdentificationNo" class="control-label">MERSIS No:</label>
                    <input asp-for="IdentificationNo" class="form-control" />
                    <span asp-validation-for="IdentificationNo" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="TaxNo" class="control-label">Tax No:</label>
                    <input asp-for="TaxNo" class="form-control" />
                    <span asp-validation-for="TaxNo" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="TaxOffice" class="control-label">Tax Office:</label>
                    <input asp-for="TaxOffice" class="form-control" />
                    <span asp-validation-for="TaxOffice" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Phone" class="control-label">Phone:</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
    
            <div class="col-md-4 ms-4">
                <div class="form-group">
                    <label asp-for="Adress" class="control-label">Address:</label>
                    <input asp-for="Adress" class="form-control" />
                    <span asp-validation-for="Adress" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Email" class="control-label">E-Mail:</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
            <label asp-for="EmployeeCount" class="control-label">Employee Count:</label>
                    <input asp-for="EmployeeCount" class="form-control" />
                    <span asp-validation-for="EmployeeCount" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="FoundYear" class="control-label">Found Year:</label>
                    <input asp-for="FoundYear" class="form-control" />
                    <span asp-validation-for="FoundYear" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
            <label asp-for="ContractStartDate" class="control-label">Contract Start Date:</label>
                    <input asp-for="ContractStartDate" class="form-control" type="date" />
                    <span asp-validation-for="ContractStartDate" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
            <label asp-for="ContractEndDate" class="control-label">Contract End Date:</label>
                    <input asp-for="ContractEndDate" class="form-control" type="date" />
                    <span asp-validation-for="ContractEndDate" class="text-danger"></span>
                </div>
                <div class="form-group text-end">
                    <input type="submit" value="Create" class="btn btn-primary mt-4" />
                </div>
            </div>
            
            
        </form>
  



