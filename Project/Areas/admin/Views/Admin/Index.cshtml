@using ApplicationCore.Attributes
@using Infrastructure.Identity;
@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Home Page";
}

@model AdminIndexViewModel
@inject UserManager<ApplicationUser> UserManager
<div class="pagetitle">
    <h1>Management Platform</h1>
</div>


<section class="section">
    <div class="row">
        <!-- Information -->
        <div class="col-xl-4">
            @{
                var user = await UserManager.GetUserAsync(User);
            }
            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                    <div class="col-xl-3">
                        <img src="~/img/@Model.AdminViewModel.ImageName" alt="Profile" class="rounded-circle img-fluid">
                    </div>
                    
                    <div class="mt-3 text-center">
                        <h3>@Model.AdminViewModel.Name @Model.AdminViewModel.Surname</h3>
                        <h4>@user.UserName</h4>
                        <div class="social-links mt-2">
                            <a href="https://twitter.com/?lang=tr" class="twitter"><i class="bi bi-twitter"></i></a>
                            <a href="https://www.facebook.com/" class="facebook"><i class="bi bi-facebook"></i></a>
                            <a href="https://www.instagram.com/" class="instagram"><i class="bi bi-instagram"></i></a>
                            <a href="https://www.linkedin.com/feed/" class="linkedin"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card text-center py-2">
                <a asp-action="Details" asp-area="admin" asp-controller="Admin">Details</a>
            </div>

            <div class="card text-center py-2">
                <a asp-action="Edit" asp-area="admin" asp-controller="Admin" >Edit</a>
            </div>

        </div>

        <div class="col-xl-8">

            <div class="card">
                <div class="card-body pt-4">
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active">Informations</button>
                        </li>
                    </ul>

                        <div class="fade show active mt-3" >
                            
                            <div class="row">
                                <div class="col-lg-3 col-md-4 label fw-semibold">Name:</div>
                                <div class="col-lg-9 col-md-8">@Model.AdminViewModel.Name</div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-lg-3 col-md-4 label fw-semibold">Surname:</div>
                                <div class="col-lg-9 col-md-8">@Model.AdminViewModel.Surname</div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-lg-3 col-md-4 label fw-semibold">Job:</div>
                                <div class="col-lg-9 col-md-8">Executive</div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-lg-3 col-md-4 label fw-semibold">Departmant:</div>
                                <div class="col-lg-9 col-md-8">IT</div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-lg-3 col-md-4 label fw-semibold">Address:</div>
                                <div class="col-lg-9 col-md-8">@Model.AdminViewModel.Address</div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-lg-3 col-md-4 label fw-semibold">Phone:</div>
                            <div class="col-lg-9 col-md-8">@Methods.FormatPhoneNumber(@Model.AdminViewModel.Phone)</div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-lg-3 col-md-4 label fw-semibold">E-mail:</div>
                                <div class="col-lg-9 col-md-8">@Model.AdminViewModel.Mail</div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</section>



