@using ApplicationCore.Attributes
@using Infrastructure.Identity
@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "Details";
}

@model AdminIndexViewModel
@inject UserManager<ApplicationUser> UserManager
<div class="pagetitle">
    <h1>Management Platform</h1>
</div>

<section class="section">
    <div class="row">
        <!-- Details -->
        @{
            var user = await UserManager.GetUserAsync(User);
        }
        <div class="col-xl-4">

            <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">

                    <img src="~/img/@Model.AdminViewModel.ImageName" alt="Profile" class="rounded-circle" width="120" height="120">
                    <div class="mt-3 text-center">
                        <h3>@Model.AdminViewModel.Name @Model.AdminViewModel.Surname</h3>
                        <h4>@user.UserName</h4>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-xl-8">

            <div class="card">
                <div class="card-body pt-4">
                    <!-- Bordered Tabs -->
                    <ul class="nav nav-tabs nav-tabs-bordered">

                        <li class="nav-item">
                            <button class="nav-link active">Details</button>
                        </li>
                    </ul>


                    <div class="row fade show active profile-overview">

                        <div class="col-xl-6 mt-4">
                            
                                <div class="row mt-2">
                                    <div class="col-lg-3 col-md-4 label fw-semibold">Name:</div>
                                    <div class="col-lg-9 col-md-8">@Model.AdminViewModel.Name</div>
                                </div>

                                @if (@Model.AdminViewModel.SecondName != null)
                                {
                                    <div class="row mt-2">
                                        <div class="col-lg-3 col-md-4 label fw-semibold">Second Name:</div>
                                        <div class="col-lg-9 col-md-8">
                                            @Model.AdminViewModel.SecondName
                                        </div>
                                    </div>
                                }


                                <div class="row mt-2">
                                    <div class="col-lg-3 col-md-4 label fw-semibold">Surname:</div>
                                    <div class="col-lg-9 col-md-8">@Model.AdminViewModel.Surname</div>
                                </div>

                                @if (@Model.AdminViewModel.SecondSurname != null)
                                {
                                    <div class="row mt-2">
                                        <div class="col-lg-3 col-md-4 label fw-semibold">Second Surname:</div>
                                        <div class="col-lg-9 col-md-8">
                                            @Model.AdminViewModel.SecondSurname
                                        </div>
                                    </div>
                                }

                                <div class="row mt-2">
                                    <div class="col-lg-3 col-md-4 label fw-semibold">ID:</div>
                                    <div class="col-lg-9 col-md-8">@Model.AdminViewModel.IdentificationNumber</div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-lg-3 col-md-4 label fw-semibold">Birth Date:</div>
                                <div class="col-lg-9 col-md-8">@Model.AdminViewModel.BirthDate?.ToString("dd/MM/yyyy")</div>
                                </div>

                                <div class="row mt-2">
                                    <div class="col-lg-3 col-md-4 label fw-semibold">Birth Place:</div>
                                    <div class="col-lg-9 col-md-8">@Model.AdminViewModel.BirthPlace</div>
                                </div>

                            <div class="row mt-2">
                                <div class="col-lg-3 col-md-4 label fw-semibold">Job:</div>
                                <div class="col-lg-9 col-md-8">Executive</div>
                            </div>
                            
                        </div>

                         <div class="col-xl-6 mt-4">
                            
                            <div class="row mt-2">
                                <div class="col-lg-3 col-md-4 label fw-semibold">Departmant:</div>
                                <div class="col-lg-9 col-md-8">IT</div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-lg-3 col-md-4 label fw-semibold">Hire Date:</div>
                                <div class="col-lg-9 col-md-8">@Model.AdminViewModel.HireDate.ToString("dd/MM/yyyy")</div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-lg-3 col-md-4 label fw-semibold">Address:</div>
                                <div class="col-lg-9 col-md-8">@Model.AdminViewModel.Address</div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-lg-3 col-md-4 label fw-semibold">Phone:</div>
                                <div class="col-lg-9 col-md-8">@Methods.FormatPhoneNumber(@Model.AdminViewModel.Phone)</div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-lg-3 col-md-4 label fw-semibold">Email:</div>
                                <div class="col-lg-9 col-md-8">@Model.AdminViewModel.Mail</div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
